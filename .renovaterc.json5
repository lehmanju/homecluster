{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>lehmanju/k8s-gitops//.renovate/autoMerge.json5",
    "github>lehmanju/k8s-gitops//.renovate/groups.json5",
    "github>lehmanju/k8s-gitops//.renovate/labels.json5",
    "github>lehmanju/k8s-gitops//.renovate/semanticCommits.json5",
    ":automergeBranch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":gitSignOff",
    ":semanticCommits",
    ":timezone(Europe/Berlin)",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  ignorePaths: ["network/**"],
  flux: {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml$"],
  },
  "helm-values": {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml$"],
  },
  kubernetes: {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml$"],
  },
}